@model string[]

<script type="text/javascript" language="javascript">
    var options = {
    enableHighAccuracy: true,
    timeout: 5000,
    maximumAge: 0
    };

    function success(pos) {
    var crd = pos.coords;

    console.log('Ваше текущее метоположение:');
    console.log(`Широта: ${crd.latitude}`);
    console.log(`Долгота: ${crd.longitude}`);
        console.log(`Плюс-минус ${crd.accuracy} метров.`);

        top.location.href = "/Home/GetGeoLocation?act=set&longitude=" + crd.longitude + "&latitude=" + crd.latitude + "&returncontroller=@Model[0]&returnaction=@Model[1]"
    };

    function error(err) {
        top.location.href = "/Home/GetGeoLocation?act=set&error=" + (err.code == 1 ? '@GlobalRes.ErrGeoLocationAccess' : '@GlobalRes.ErrGeoLocation') + "&returncontroller=@Model[0]&returnaction=@Model[1]"
        
    };

    navigator.geolocation.getCurrentPosition(success, error, options);

    
</script>
